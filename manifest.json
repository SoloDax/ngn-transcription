{
  "manifest_version": 3,
  "name": "NGN â€“ AI Audio Transcription",
  "version": "2.0.0",
  "description": "Real-time AI audio transcription from any browser tab. Ultra-fast Soniox ASR with 60+ languages, floating captions, and SRT export.",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "offscreen",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/caption-overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Start/Stop recording"
    }
  }
}
